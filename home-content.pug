// [1] Main section containing an image slider, about section, and footer
main
  // Image slider section with images and navigation buttons
  #image-slider
    // [2]
    img(src="/img/b2.jpg", alt="Bicycle Image 1")
    // [2]
    img(src="/img/b3.jpg", alt="Bicycle Image 2")
    // [2]
    img(src="/img/b4.jpg", alt="Bicycle Image 3")
    // [3]
    button#prev-btn.slider-btn(onclick="prevSlide()") &#10094; 
    // [3]
    button#next-btn.slider-btn(onclick="nextSlide()") &#10095; 

  // About section with a heading, paragraph, and information about bicycles
  #about-section
    h2 About Bicycles
    p
      | Bicycles have been a popular mode of transportation for decades. They provide a sustainable and healthy way to commute while also offering a sense of freedom and adventure. 
      | Whether you're a casual rider or a seasoned cyclist, bicycles play a crucial role in promoting a greener and healthier lifestyle.

  // [4] Footer section with contact information
  footer 
    // [5]
    p Contact us: example@email.com | Phone: +123 456 7890

  // [5] JavaScript script for handling image slider functionality
  script.
    var currentSlide = 0;
    // [6]
    function showSlide(n) {
        // [7]
        var slides = document.querySelectorAll('#image-slider img');
        if (n >= slides.length) {
            currentSlide = 0;
        } else if (n < 0) {
            currentSlide = slides.length - 1;
        } else {
            currentSlide = n;
        }

        for (var i = 0; i < slides.length; i++) {
            slides[i].style.display = 'none';
        }

        slides[currentSlide].style.display = 'block';
    }
    // [6]
    function nextSlide() {
        showSlide(currentSlide + 1);
    }
    // [6]
    function prevSlide() {
        showSlide(currentSlide - 1);
    }

    showSlide(currentSlide);

