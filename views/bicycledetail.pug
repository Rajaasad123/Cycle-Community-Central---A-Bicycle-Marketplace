doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Bicycle Detail Page
    style.
      body {
          font-family: Arial, sans-serif;
          margin: 0;
          padding: 0;
      }

      h1, h2 {
          text-align: center;
      }

      nav {
          background-color: #f0f0f0;
          padding: 10px;
          display: flex;
          justify-content: space-around;
          align-items: center; 
      }

      nav div {
          text-align: center;
          margin: 0;
      }

      nav div a {
          text-decoration: none;
          color: #333;
      }

     #logo {
            width: 200px;
            height: 200px;
            background-image: url('/img/logo.PNG'); /* Replace with the path to your image */
            background-size: cover; /* Adjust as needed */
            background-position: center; /* Adjust as needed */
            line-height: 200px;
            }


      main {
          display: flex;
          width: 100%;
      }

      #photos {
          flex: 2;
          padding: 10px;
          background-color: #f0f0f0;
      }

      .main-photo {
          width: 100%;
          height: auto;
          margin-bottom: 10px;
      }

      .additional-photos {
          display: flex;
          flex-wrap: wrap;
          justify-content: space-between;
      }

      .additional-photo {
          width: 48%;
          margin-bottom: 10px;
      }

      #details {
          flex: 8;
          padding: 10px;
      }

      .detail-card {
          border: 1px solid #ccc;
          padding: 20px;
          display: flex;
          flex-direction: column;
          align-items: flex-start;
          width: 100%;
          margin-bottom: 10px;
      }

      .title {
          margin-top: 10px;
      }

      .feedback-section {
          padding: 10px;
      }

      .feedback-heading {
          text-align: center;
          font-size: 20px;
          font-weight: bold;
          margin-bottom: 10px;
      }

      .comment-card {
          border: 1px solid #ccc;
          padding: 10px;
          margin-bottom: 10px;
          display: flex;
          flex-direction: column;
      }

      .commenter-photo {
          width: 50px;
          height: 50px;
          background-color: #ccc;
          margin-right: 10px;
      }

      .comment {
          margin-top: 10px;
      }

      .timestamp {
          margin-top: 10px;
          font-size: 12px;
          color: #888;
      }

      .add-comment-btn {
          background-color: #4CAF50;
          color: white;
          cursor: pointer;
          border: none;
          padding: 8px 12px;
          text-align: center;
          text-decoration: none;
          display: inline-block;
          font-size: 16px;
          margin-top: 10px;
          transition-duration: 0.4s;
          border-radius: 4px;
      }

      .add-comment-btn:hover {
          background-color: white;
          color: black;
          border: 1px solid #4CAF50;
      }
      button {
          background-color: #4CAF50;
          color: white;
          cursor: pointer;
          border: none;
          padding: 8px 12px;
          text-align: center;
          text-decoration: none;
          display: inline-block;
          font-size: 16px;
          margin: 4px 2px;
          transition-duration: 0.4s;
          border-radius: 4px;
      }

       button:hover {
          background-color: white;
          color: black;
          border: 1px solid #4CAF50;
      }
    body
        nav
            div#logo
            div: a(href="/") Bicycle
            div: a(href="#") Bicycle Parts
            div: a(href="#") My Orders
            div Welcome John Doe
        main
            div#photos
                img.main-photo(src="/img/bicycle.jpg", alt="Main Bicycle Photo")
                .additional-photos 
                    img.additional-photo(src="/img/b1.jpg", alt="Additional Bicycle Photo")
                    img.additional-photo(src="/img/b2.jpg", alt="Additional Bicycle Photo")
                    img.additional-photo(src="/img/b3.jpg", alt="Additional Bicycle Photo")
                    img.additional-photo(src="/img/b4.jpg", alt="Additional Bicycle Photo")
                    img.additional-photo(src="/img/b5.jpg", alt="Additional Bicycle Photo")
            div#details
                .detail-card
                    h2.title=data.Title
                    p.title 
                        b Quantity: 
                        | #{data.Quantity}
                    p.title 
                        b Condition: 
                        | #{data.Condition}
                    p.title 
                        b Description: 
                        | #{p=data.Description}
                    p.title 
                        b Specification: 
                        | #{data.Specification}
                    p.title 
                        b Price: 
                        | #{data.Price}
                        |  $
                    button(type="button")=data.PurchaseMode
                div.feedback-section
                    .feedback-heading Feedback
                    if comments.length > 0
                        each comment in comments
                            .comment-card
                                img.commenter-photo(src="/img/user.png", alt="Commenter Photo")
                                div
                                p.comment=comment.Comment
                                p.timestamp=comment.Datetime
                    else
                        .comment-card
                            div
                            p.comment No comments
                    button.add-comment-btn(type="button") Add Comment

