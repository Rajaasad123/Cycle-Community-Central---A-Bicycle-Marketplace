doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Bicycle Listing Page
    style.
      body {
          font-family: Arial, sans-serif;
          margin: 0;
          padding: 0;
      }

      h1, h2 {
          text-align: center;
      }

      nav {
          background-color: #f0f0f0;
          padding: 10px;
          display: flex;
          justify-content: space-around;
          align-items: center; 
      }

      nav div {
          text-align: center;
          margin: 0;
      }

      nav div a {
          text-decoration: none;
          color: #333;
      }

     #logo {
            width: 200px;
            height: 200px;
            background-image: url('/img/logo.PNG'); /* Replace with the path to your image */
            background-size: cover; /* Adjust as needed */
            background-position: center; /* Adjust as needed */
            line-height: 200px;
            }

      main {
          display: flex;
      }

      #filter {
          flex: 1;
          background-color: #f0f0f0;
          padding: 10px;
      }

      #listing {
          flex: 3;
          padding: 10px;
      }

      .filter-section h2 {
          margin-top: 0;
      }

      .listing-card {
          border: 1px solid #ccc;
          margin-bottom: 10px;
          padding: 10px;
          display: flex;
      }

      .bicycle-image {
          flex: 1;
      }

      .details {
          flex: 2;
          padding: 0 10px;
          display: flex;
          flex-direction: column;
          justify-content: space-between;
      }

      .clearbtn{
        background-color: #FF0000;
          color: white;
          cursor: pointer;
          border: none;
          padding: 8px 12px;
          text-align: center;
          text-decoration: none;
          display: inline-block;
          font-size: 16px;
          margin: 4px 2px;
          transition-duration: 0.4s;
          border-radius: 4px;
      }


      .clearbtn:hover {
          background-color: white;
          color: black;
          border: 1px solid #FF0000;
      }

      .btnitemDetails, button {
          background-color: #4CAF50;
          color: white;
          cursor: pointer;
          border: none;
          padding: 8px 12px;
          text-align: center;
          text-decoration: none;
          display: inline-block;
          font-size: 16px;
          margin: 4px 2px;
          transition-duration: 0.4s;
          border-radius: 4px;
      }

      .btnitemDetails:hover, button:hover {
          background-color: white;
          color: black;
          border: 1px solid #4CAF50;
      }
  body
    nav
      div#logo
      div: a(href="#") Bicycle
      div: a(href="#") Bicycle Parts
      div: a(href="#") My Orders
      div Welcome John Doe
    main
      div#filter
        h2 Filters
        form(action="/", method="get", onsubmit="return true;")
            .filter-section
                h3 Color
                label
                    input(type="checkbox", name="color", value="Red", checked=colorFilters.includes("Red"))
                    | Red
                br
                label
                    input(type="checkbox", name="color", value="Green", checked=colorFilters.includes("Green"))
                    | Green
                br
                label
                    input(type="checkbox", name="color", value="Blue", checked=colorFilters.includes("Blue"))
                    | Blue
                br
                label
                    input(type="checkbox", name="color", value="Black", checked=colorFilters.includes("Black"))
                    | Black
                br
            .filter-section
                h3 Size
                label
                    input(type="checkbox", name="size", value="Small", checked=sizeFilters.includes("Small"))
                    | Small
                br
                label
                    input(type="checkbox", name="size", value="Medium", checked=sizeFilters.includes("Medium"))
                    | Medium
                br
                label
                    input(type="checkbox", name="size", value="Large", checked=sizeFilters.includes("Large"))
                    | Large
                br
            .filter-section
                h3 Purchase Mode
                label
                    input(type="checkbox", name="purchaseMode", value="Buy", checked=purchaseModeFilters.includes("Buy"))
                    | Buy
                br
                label
                    input(type="checkbox", name="purchaseMode", value="Rent", checked=purchaseModeFilters.includes("Rent"))
                    | Rent
                br
            button(type="submit") Apply Filters
            a(href="/" class="clearbtn") Clear Filters
      div#listing
        if data.length > 0
          each item in data
            .listing-card
              .bicycle-image
                img(src="/img/bicycle.jpg", alt="Bicycle Image", style="width: 100px; height: 100px;")
              .details
                h3=item.Title
                div
                 a(href="/bicycleDetail?id=" + item.Id, class="btnitemDetails")=item.PurchaseMode
                 span(style="padding-left:10px")=item.Price 
                    | $
        else
          .listing-card
            .bicycle-image
              img(src="/img/noitem.jpg", alt="No Item Image", style="width: 100px; height: 100px;")
            .details
              h3 No items available
              div
                | Sorry, no items are available at the moment.

